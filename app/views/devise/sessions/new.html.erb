<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {id: 'my_form',class:"mt-5"}) do |f| %>
  <h2 class="text-center">Log in</h2>
  <div class="form-group">
    <%= f.label :"Email :"%>
    <%= f.text_field :email,required:true,class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :"Password :"%>
      <%= f.password_field :password,required:true,class:"form-control"%>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class:"btn btn-success btn-block" %>
  </div>
<% end %>
