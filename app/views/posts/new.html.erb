<%= form_with scope: :post,:url=>{action:"create"} do |f| %>
<div class="form-group">
    <%= f.label :"Title"%>
    <%= f.text_field :title,class:"form-control",placeholder:"Enter Title of Post",required:true%>
    <% if @post.errors %>
        <% @post.errors.full_messages_for(:title).each do |error| %>
        <p style="color:red;font-size:1rem"><%= error %></p>
        <% end %>
        <% end %>
</div>
<div class="form-group">
    <%= f.label :"Content"%>
    <%= f.text_area :content,class:"form-control",placeholder:"Enter Content of Post",required:true,rows: 10,cols: 10%>
    <% if @post.errors %>
        <% @post.errors.full_messages_for(:content).each do |error| %>
        <p style="color:red;font-size:1rem"><%= error %></p>
        <% end %>
        <% end %>
</div>
<%= link_to 'Back',root_path,class:"btn btn-warning btn-lg" %>
<%= f.submit "Create Post", class: 'btn btn-success btn-lg float-right' %>
<% end %>